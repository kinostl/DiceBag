extends ../layout.pug

block content
  .is-pulled-left
  .level 
    .level-left
      ul 
        li
          h4.title Series 
            span.subtitle= dice.series
        li
          h4.title Number 
            span.subtitle= dice.number
        li
          h4.title Owner 
            span.subtitle= dice.owner
        li
          h4.title Guild 
            span.subtitle= dice.guild
    .level-right
      article.message
        .message-header 
          p Dicey Details
        .message-body
          ul 
            li 
              b Face Count 
              span= dice.faceCount
            li 
              b Size 
              span= dice.size
            li 
              b Gimmick 
              span= dice.gimmick
            li 
              b Color 
              span= dice.color
            li 
              b Material 
              span= dice.material
            li 
              b Dice Class 
              span= dice.specialType
            li
              b Faces 
              span= dice.faces.join()
            li 
              p= dice.hash
  style. 
    ul>li>span{
      float: right;
    }
extends ../layout.pug

block content
  .is-pulled-left
    h3.title= dice.hash
    h4.title Number 
      span.subtitle= dice.number
    h4.title Series 
      span.subtitle= dice.series
    h4.title Owner 
      span.subtitle= dice.owner
    h4.title Guild 
      span.subtitle= dice.guild
  article.message.is-pulled-right
    .message-header 
      p Dicey Details
    .message-body
      ul 
        li 
          b Face Count 
          span= dice.faceCount
        li 
          b Size 
          span= dice.size
        li 
          b Gimmick 
          span= dice.gimmick
        li 
          b Color 
          span= dice.color
        li 
          b Material 
          span= dice.material
        li 
          b Dice Class 
          span= dice.specialType
        li
          b Faces 
          span= dice.faces.join()
  style. 
    ul>li>span{
      float: right;
    }